<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>
      MyImdb
      <% if title = yield(:title) %>
        <%= " - #{title}" %>
      <% end %>
    </title>
    
    <%= stylesheet_link_tag 'reset',
          'default',
          'grid',
          'content',
          'scrollable',
          :cache => true %>
    <%= stylesheet_link_tag cdn_jquery_ui_css %>
    <%= javascript_include_tag 'jquery-1.3.2.min.js', 
          'jquery.tools.min.js',
          'jrails',
          'jquery.jeditable.js',
          'jquery.history.js',
          'application',
          :cache => true %>
    <%= javascript_include_tag cdn_jquery_ui %>
    <%= js_contants %>

    <% on_ready do %>
      <%= yield :page_ready_javascript %>
    <% end %>
  </head>
  
  <body>
    <%= render 'shared/flash_message' %>
    <div id='background'>
      <div id='header'>
        <%= render 'shared/header' %>
      </div>
    
      <div id='title'>
        <h1>MyImdb</h1>
        <%= render 'shared/title' %>
      </div>

      <div id='content'>
        <div id='sidebar'>
          <%= render 'shared/sidebar' %>
        </div>
        <div id='body'>
          <%= yield %>
        </div>
      </div>
    
      <div id='footer'>
        <%= render 'shared/footer' %>
      </div>
    </div>
    
    <div id='overlay'>
      <%= render 'shared/overlay' %>
    </div>
    <div id='globalTooltip'></div>
    <!-- overlay element --> 
    <div class="simple_overlay" id="gallery"> 
        <a class="prev">prev</a> 
        <a class="next">next</a> 
        <div class="info"></div> 
        <img class="progress" src="http://static.flowplayer.org/tools/img/overlay/loading.gif" /> 
    </div>
  </body>
</html>
